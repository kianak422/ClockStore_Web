@{
    Layout = "_DashboardLayout";
}

<h1 class="h2">Bảng điều khiển</h1>
<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Tổng số đơn hàng</h5>
                <p class="card-text">1,234</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Tổng doanh thu</h5>
                <p class="card-text">$12,345.67</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Sản phẩm bán chạy nhất</h5>
                <p class="card-text">Đồng hồ A</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Đơn hàng gần đây</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#1001</td>
                            <td>Nguyễn Văn A</td>
                            <td>2024-07-20</td>
                            <td>$150.00</td>
                            <td>Đã giao</td>
                        </tr>
                        <tr>
                            <td>#1002</td>
                            <td>Trần Thị B</td>
                            <td>2024-07-19</td>
                            <td>$220.50</td>
                            <td>Đang xử lý</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>